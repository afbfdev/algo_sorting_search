//---Sort selection---//
ALGORITHM selection_sort_array
VAR
    tab : ARRAY_OF INTEGER[];
BEGIN
    FOR i FROM 0 TO tab.lenght-1 STEP 1  DO
        FOR j FROM i+1 TO tab.lenght-1 STEP 1  DO
            IF (tab[i] < tab[j]) THEN
                temp := tab[i] // inverser --> variable temporel pour pas perdre la valeur de tab[i]
                tab[i] := tab[j]
                tab[j] := temp
            END_IF
        END_FOR
    END_FOR
END
